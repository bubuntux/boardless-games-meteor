template(name="love_letters")
  #screens
    .empty-wrapper
      #list-of-cards.screen
        .row.text-center List of Cards
        each gameCard
          .row #{value} - #{name} (#{amount}) : #{shortDesc}
      #played-cards.screen
        .row.text-center Played cards
        each playedCards
          img.row.center-block.img-responsive(src='#{this}.jpg', style='margin-bottom:-290px')
        .margin(style='min-height:290px')
      #hand.screen
        .row.text-center Cards in the hand
        .row
          each myCards
            .card
              img.col-xs-6.img-responsive(src='#{this}.jpg')
              input(type='hidden', value='#{this}')
      #player-selection.screen
        .row.text-center Select a Player
        br
        each players
          .row.text-center.player
            .btn.btn-default #{name}
          br
          input(type='hidden', value='#{id}')

  //
    .container-fluid.text-center
      .row.btn-group(data-toggle="buttons")
        .col-xs-1
          | Played cards
        each cards
          if myTurn
            label.btn.btn-default(class="#{cardClass}")
              input(type='radio', name="cardRadio", value="#{value}")
              | #{name}
              br
              | #{cardCount}
          else
            .col-xs-1
              | #{name}
              br
              | #{cardCount}
        .col-xs-1
          | discarded: ?
        .col-xs-1
          | remainCards: #{remainCards.length}
      br
      br
      .row.btn-group(data-toggle="buttons")
        each players
          if myTurn
            label.btn.btn-default(class="#{playerClass}")
              input(type="radio", name="playerRadio", value="#{id}")
              | #{victories} #{name}
              .text-danger
                | #{dontHave}
          else
            .col-xs-2(class="#{playerClass}")
              | #{victories} #{name}
              .text-success
                | #{peek}
              .text-danger
                | #{dontHave}
      br
      br
      | Your card
      br
      .row.btn-group(data-toggle="buttons")
        each myCards
          if myTurn
            label.btn.btn-default
              input(type="radio", name="myCardRadio", value="#{value}")
              | #{name}
          else
            .col-xs-2
              | #{name}
      br
      br
      .row
        if myTurn
          .btn.btn-default.btn-play
            | Play