template(name="love_letters")
  #screens
    .empty
      //.screen.rules
        | Rules // TODO!
      .screen.list-of-cards.container
        | List of Cards
        each gameCard
          .row
            | #{value} - #{name} (#{amount}) : #{shortDesc}
      .screen.played-cards
        | Played cards
      .screen.hand-cards
        | Hand Card(s)

  //
    .container-fluid.text-center
      .row.btn-group(data-toggle="buttons")
        .col-xs-1
          | Played cards
        each cards
          if myTurn
            label.btn.btn-default(class="#{cardClass}")
              input(type='radio', name="cardRadio", value="#{value}")
              | #{name}
              br
              | #{cardCount}
          else
            .col-xs-1
              | #{name}
              br
              | #{cardCount}
        .col-xs-1
          | discarded: ?
        .col-xs-1
          | remainCards: #{remainCards.length}
      br
      br
      .row.btn-group(data-toggle="buttons")
        each players
          if myTurn
            label.btn.btn-default(class="#{playerClass}")
              input(type="radio", name="playerRadio", value="#{id}")
              | #{victories} #{name}
              .text-danger
                | #{dontHave}
          else
            .col-xs-2(class="#{playerClass}")
              | #{victories} #{name}
              .text-success
                | #{peek}
              .text-danger
                | #{dontHave}
      br
      br
      | Your card
      br
      .row.btn-group(data-toggle="buttons")
        each myCards
          if myTurn
            label.btn.btn-default
              input(type="radio", name="myCardRadio", value="#{value}")
              | #{name}
          else
            .col-xs-2
              | #{name}
      br
      br
      .row
        if myTurn
          .btn.btn-default.btn-play
            | Play