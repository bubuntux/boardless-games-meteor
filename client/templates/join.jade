template(name="join")
  .container-fluid.text-center
    .row
      +each players
        +player
    .row
      +if showBtn
        .col-xs-offset-3.col-xs-6.btn.btn-default(class="#{btnClass}")
          | #{btnText}
      +else
        .col-xs-offset-3.col-xs-6
          | Waiting for other players
    +with game
      | #{_id}