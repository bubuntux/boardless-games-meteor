template(name="home")
  .container-fluid
    .form-group
      label(for="nameInput") Select your game
      select.form-control.nameInput
        each gameOptions
          option(value="#{id}")
            | #{name}
    .form-group
      label(for="keyInput") Enter your board name
      input.form-control.keyInput(type="text")
    .row
      button.col-xs-offset-1.col-xs-4.btn.btn-lg.btn-primary.btn-create(class="#{btnCreateClass}")
        | Create
      button.col-xs-offset-2.col-xs-4.btn.btn-lg.btn-primary.btn-join.disabled
        | Join